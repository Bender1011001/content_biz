# .replit
language = "python3"
entrypoint = "main.py"
run = "alembic upgrade head && uvicorn main:app --host 0.0.0.0"
modules = ["python-3.12", "nodejs-20", "web", "postgresql-16"]

[packages]
uvicorn = "*"

[env]
PYTHONUNBUFFERED = "1"

[deployment]
run = ["sh", "-c", "alembic upgrade head && uvicorn main:app --host 0.0.0.0 --port $PORT"]

[nix]
channel = "stable-24_05"