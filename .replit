# .replit
language = "python3"
entrypoint = "main.py"
modules = ["python-3.12", "nodejs-20", "web", "postgresql-16"]

[packages]
uvicorn = "*"

[env]
PYTHONUNBUFFERED = "1"

[deployment]
run = ["sh", "-c", "alembic upgrade head && uvicorn main:app --host 0.0.0.0 --port $PORT"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Run Server"

[[workflows.workflow]]
name = "Run Server"
author = 39010481
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pip install --no-cache-dir -r requirements.txt && python -m spacy download en_core_web_sm && alembic upgrade head && uvicorn main:app --host 0.0.0.0 --port 5000"
